<div id="cookfor" >
  <h2 id="cookforh2">Search Results for "<%= query %>"</h2>
</div>


<div class="page-container">
  <div class="content" style="padding: 7rem;">


    <% if (recipes.length === 0) { %>
      <p>No recipes found.</p>
    <% } else { %>
      <div style="display: flex; flex-wrap: wrap; gap: 2rem;justify-content: center;">
        <% recipes.forEach(recipe => { %>
          <div style="width: 300px; padding: 1rem; border-radius: 10px;box-shadow: -8px 8px 15px rgba(72, 72, 72, 0.5);" class="recipe-card">
            <h3><%= recipe.name %></h3>
            <br>
            <p><%= recipe.description %></p>
            <a href="/recipe/<%= recipe.id %>" style="color: black; text-decoration: none;">View Recipe â†’</a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

